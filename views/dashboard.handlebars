<div class="row justify-space-between-md">
  <div class="login-card">
    <h2 class="page-title">Past and Future Posts</h2>
    <form class="form login-form">
      <div class="form-group">
        <label>Title</label>
        <input class="form-input" type="text" id="newPost-title" />
      </div>
      <div class="form-group">
        <label>Body</label>
        <input class="form-input" size="50" type="text" id="newPost-body" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" id="newPost-btn">Create Post</button>
      </div>
    </form>
  </div>
</div>

{{!-- Edit / delete posts that are written by user --}}
{{#each myPosts as |post|}}
{{> post-details}}
 <a href="/posts/{{id}}">
  <p>Edit Post</p>
  </a>
  <button name={{id}} class="delete-btn">Delete Post</button>
{{/each}}